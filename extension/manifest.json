{
  "manifest_version": 3,
  "name": "TOS Report Card",
  "version": "1.1.5",
  "description": "Instant A-F grades for Terms of Service and Privacy Policies. Know the grade before you sign.",
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "TOS Report Card - Analyze this page"
  },
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://api.anthropic.com/*"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
